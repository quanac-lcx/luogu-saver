                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
		function toggleMobileSidebar() {
			{% if isMobile %}
			document.body.classList.toggle('mobile-sidebar-visible');
			{% endif %}
		}

		const siteStartDate = new Date("2025-02-12T00:00:00Z");
		const now = new Date();
		const daysRunning = Math.floor((now - siteStartDate) / (1000 * 60 * 60 * 24));
		document.getElementById("site-days").textContent = daysRunning;
		$(function () {
			$("a[href='/user/login']").on("click", function (e) {
				e.preventDefault();
				Swal.fire({
					title: "请输入 Token",
					input: "text",
					inputPlaceholder: "输入你的登录凭据喵！♥️",
					confirmButtonText: "就是这个喵！",
					cancelButtonText: "不是这个喵...",
					showCancelButton: true
				}).then(result => {
					$.post("/user/login", { token: result.value })
						.done(res => {
							if (!res.success) {
								if (!(!result.value || result.value === "")) {
									Swal.fire("登录失败", res.message || "Token 无效", "error");
								}
							}
							else {
								location.reload();
							}
						})
						.fail(() => {
							Swal.fire("错误", "网络或服务器异常", "error");
						});
				});
			});
		});
		$(function () {
			$("a[href='/user/logout']").on("click", function (e) {
				e.preventDefault();
                $.post("/user/logout")
                    .done(res => {
                        location.reload();
                    })
                    .fail(() => {
                        Swal.fire("错误", "网络或服务器异常", "error");
                    });
			});
		});

		$(function() {
			const $sidebar = $(".ui.left.hover.sidebar");
			let lastActive = null;
			$(".accordion-title").on("click", function(e) {
				e.preventDefault();
				const $title = $(this);
				const $content = $title.next(".accordion-content");

				$(".accordion-content").not($content).slideUp(200);
				$(".accordion-title").not($title).removeClass("active");

				if ($title.hasClass("active")) {
					$title.removeClass("active");
					$content.slideUp(200);
					lastActive = null;
				} else {
					$title.addClass("active");
					$content.slideDown(200);
					lastActive = $title;
				}
			});

			$sidebar.on("mouseleave", function() {
				$(".accordion-content").slideUp(200);
				$(".accordion-title").removeClass("active");
			});

			$sidebar.on("mouseenter", function() {
				if (lastActive) {
					lastActive.addClass("active");
					lastActive.next(".accordion-content").slideDown(200);
				}
			});
		});
    </script>
</body>
