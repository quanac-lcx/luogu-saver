{% extends "../layout.njk" %}

{% block content %}
<div class="ui grid">
    <div class="sixteen wide column">
        <h1 class="ui header">
            <i class="ui icon tasks"></i>
            <div class="content">
                队列管理
                <div class="sub header">任务队列状态监控</div>
            </div>
        </h1>
    </div>
</div>

<div class="ui two column stackable grid">
    <div class="column">
        <div class="card shadow" style="text-align: center;">
            <div class="ui statistic">
                <div class="value">{{ queueStatus.length }}</div>
                <div class="label">等待中的任务</div>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="card shadow" style="text-align: center;">
            <div class="ui statistic">
                <div class="value">{{ queueStatus.running }}</div>
                <div class="label">正在执行的任务</div>
            </div>
        </div>
    </div>
</div>

<script>
// Auto refresh every 5 seconds
setInterval(function() {
    window.location.reload();
}, 5000);
</script>
{% endblock %}