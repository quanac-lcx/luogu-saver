<body style="width: calc(100% - 90px); height: calc(100% - 20px); margin-left: 100px; background-color: #f8fafc; position: relative;">
    {% if isMobile %}
    <div class="mobile-menu-toggle" onclick="toggleMobileSidebar()">
        <i class="bars icon"></i>
    </div>
    <div class="mobile-sidebar-overlay" onclick="toggleMobileSidebar()"></div>
    {% endif %}
